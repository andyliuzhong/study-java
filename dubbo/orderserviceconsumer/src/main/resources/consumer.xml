<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://dubbo.apache.org/schema/dubbo" xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans        http://www.springframework.org/schema/beans/spring-beans-4.3.xsd        http://dubbo.apache.org/schema/dubbo        http://dubbo.apache.org/schema/dubbo/dubbo.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
    <context:component-scan base-package="com.daye.liu.service"></context:component-scan>
    <!--指定当前服务名中 （同样的服务名中相同）-->
    <dubbo:application name="order-service-consumer" logger="slf4j"></dubbo:application>
    <!--dubbo 注册中心-->
    <dubbo:registry address="zookeeper://47.115.41.44:2181"></dubbo:registry>
    
    <!--声明要调用的远程接口  生成远程服务代理-->
    <dubbo:reference interface="com.daye.liu.service.UserService" id="userService"></dubbo:reference>
    <!-- 配置监控中心
    <dubbo:monitor protocol="registry"></dubbo:monitor>
    &lt;!&ndash;或&ndash;&gt;
    <dubbo:monitor address="127.0.0.1:7070"></dubbo:monitor>-->
</beans>