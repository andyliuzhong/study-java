<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans        http://www.springframework.org/schema/beans/spring-beans-4.3.xsd        http://dubbo.apache.org/schema/dubbo        http://dubbo.apache.org/schema/dubbo/dubbo.xsd">
    <!--指定当前服务名中 （同样的服务名中相同）-->
    <dubbo:application name="user-service-provider"></dubbo:application>
    <!--指定注册中心-->
    <dubbo:registry address="zookeeper://47.115.41.44:2181"></dubbo:registry>
    <!--或-->
    <!--<dubbo:registry protocol="zookeeper" address="47.115.41.44:2181"></dubbo:registry>-->
    <!--指定通信协议 端口-->
    <dubbo:protocol name="dubbo" port="20880"></dubbo:protocol>
    <!--声明暴露的服务-->
    <dubbo:service interface="com.daye.liu.service.UserService" ref="userService"></dubbo:service>

    <bean class="com.daye.liu.impl.UserServiceImpl" id="userService"></bean>

   <!-- 配置监控中心
    <dubbo:monitor protocol="registry"></dubbo:monitor>
    &lt;!&ndash;或&ndash;&gt;
    <dubbo:monitor address="127.0.0.1:7070"></dubbo:monitor>-->
</beans>